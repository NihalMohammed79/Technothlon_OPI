ar[8] = ""+document.forms["myForm"]["9"].value;
var arr=[1,1,1,1,1,1,1,1,1];
for(var i=0;i<9;i++){
    for(var j=0;j<ar[i].length;j++){
        arr[ar[i][j]-'1']++;
        }
    }
var p=0;
for(var i=0;i<9;i++){
    p=p+arr[i];
}
for(var i=0;i<9;i++){
    arr[i]=p-arr[i];
}
var ax=new Array(9);
var s=0;
for(var i=0;i<9;i++){
    ax[i]=parseInt(ar[i],10);
    if(ax[i]==arr[i]){
        s++;
    }
}
if(s==9){
    document.body.innerHTML += '<form id="dynForm" action="/digits" method="post"><input type="hidden" name="form" value="correct"></form>';
	document.getElementById("dynForm").submit();
}else{
    document.body.innerHTML += '<form id="dynForm" action="/digits" method="post"><input type="hidden" name="form" value="worng"></form>';
	document.getElementById("dynForm").submit();
}
}
</script>
