                { fail=1; break; }
            else if(s[16] && s[17] && s[21] && s[22])
                { fail=1; break; }
            else if(s[17] && s[18] && s[22] && s[23])
                { fail=1; break; }
            else if(s[18] && s[19] && s[23] && s[24])
                { fail=1; break; }

            //check for 2x2 squses
            else if(s[0] && s[2] && s[10] && s[12])
                { fail=1; break; }
            else if(s[1] && s[3] && s[11] && s[13])
                { fail=1; break; }
