    /*
    border: dashed 1px;
    border-radius: 50%;
    */
    margin: 1.75em auto 0;
}
#circle-container a {
    display: block;
    position: absolute;
    top: 50%; left: 50%;
    width: 4em; height: 4em;
    margin: -2em;
}

#circle-container img { display: block; width: 50%; }
</style>
</head>
<body>
